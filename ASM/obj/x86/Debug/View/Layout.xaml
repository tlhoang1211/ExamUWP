<Page
    x:Class="ASM.View.Layout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASM.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <NavigationView x:ConnectionId='2' x:Name="NavView"
                                                
                                                          
                                                              >
            <NavigationView.MenuItems>
                <NavigationViewItem Tag="add" Content="Add Contact"/>
                <NavigationViewItemSeparator/>
                <NavigationViewItem Tag="search" Content="Search Contact"> </NavigationViewItem>
                
            </NavigationView.MenuItems>


            <ScrollViewer>
                <Frame x:ConnectionId='3' x:Name="ContentFrame" Padding="12,0,12,24" IsTabStop="True"
                                                                   />
            </ScrollViewer>
        </NavigationView>

       
    </Grid>
</Page>

